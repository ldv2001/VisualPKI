<Window x:Class="VisualPKI.Views.PasswordFinder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Source={StaticResource LocalizedStrings}, Path=Locale.PasswordRequired}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Height="175" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding Source={StaticResource LocalizedStrings}, Path=Locale.Password}" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="1" x:Name="PasswordBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10"/>
        <Button Grid.Row="2" Content="{Binding Source={StaticResource LocalizedStrings}, Path=Locale.OK}" HorizontalAlignment="Right" Margin="10" Padding="5,0" Click="OkButton_OnClick"/>
    </Grid>
</Window>
