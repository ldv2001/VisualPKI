<Window x:Class="VisualPKI.Views.IntermediateCertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:u="clr-namespace:Utils.WPF;assembly=Utils"
        Title="{Binding Source={StaticResource LocalizedStrings}, Path=Locale.CreateIntermediateCertificate}" 
        Height="300" 
        Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--Labels-->
        <Label Grid.Row="0" Grid.Column="0" Content="{Binding Path=Locale.CACertificate, Source={StaticResource LocalizedStrings}}" Style="{StaticResource LabelStyle}"/>
        <Label Grid.Row="1" Grid.Column="0" Content="{Binding Path=Locale.CAPrivateKey, Source={StaticResource LocalizedStrings}}" Style="{StaticResource LabelStyle}"/>
        <!--Labels-->
        <!--Controls-->
        <u:FilePicker Grid.Row="0" Grid.Column="1" Style="{StaticResource FilePickerStyle}"/>
        <u:FilePicker Grid.Row="1" Grid.Column="1" Style="{StaticResource FilePickerStyle}"/>
        <!--Controls-->
    </Grid>
</Window>
